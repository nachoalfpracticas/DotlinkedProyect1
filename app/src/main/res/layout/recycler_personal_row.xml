<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="24dp"
    android:foregroundGravity="center"
    android:alpha="0.8"
    android:theme="@style/Base.CardView"
    android:background="@color/card_view_background"
    app:cardCornerRadius="30dp">

<GridLayout
    android:background="@color/card_view_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_person_lastName"
    android:columnCount="2"
    android:rowCount="5">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_person_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Alfonso José"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_person_lastName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="González Delgado"
        android:textSize="24sp" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="30dp"
        android:text="@string/mobile"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_person_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="150dp"
        android:inputType="phone"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_16"
        android:text="695485170"
        android:drawablePadding="2dp"
        android:textColor="@color/sampleLighter"
        android:textAlignment="textEnd"
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="30dp"
        android:paddingTop="5dp"
        android:text="@string/email"

        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_person_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="120dp"
        android:autoSizeTextType="uniform"
        android:inputType="textEmailAddress"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_16"
        android:text="alfonso8969@gmail.com"
        android:textAlignment="textEnd"
        android:textColor="@color/blueDotlinked"
        android:textSize="18sp"

        tools:targetApi="o" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="@string/rol"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_person_rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="100dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_16"
        android:paddingBottom="10dp"
        android:text="@string/igRoles"
        android:textAlignment="textEnd"
        android:textSize="18sp" />


</GridLayout>
</androidx.cardview.widget.CardView>