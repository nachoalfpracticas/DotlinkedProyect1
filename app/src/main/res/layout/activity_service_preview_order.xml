<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.ServicePreviewOrderActivity">

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar_service_preview_order"
      android:layout_width="0dp"
      android:layout_height="56dp"
      android:background="@color/blueDotlinked"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_select_service_other_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/blueDotlinked"
        android:padding="4dp"
        android:text="@string/select_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_tenants" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spn_tenants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:isScrollContainer="true"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_spinner_tenants" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spn_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:isScrollContainer="true"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_spinner" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
        android:text="@string/company"
        android:textAlignment="center"
        android:textColor="@color/blueDotlinked"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_service_preview_order"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_spinner_tenants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/rol_tenant"
        android:textAlignment="center"
        android:textColor="@color/blueDotlinked"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_services" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/company"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_company_name" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lbl_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/services"
        android:textAlignment="center"
        android:textColor="@color/blueDotlinked"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />


</androidx.constraintlayout.widget.ConstraintLayout>